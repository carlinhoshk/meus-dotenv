import = [
  "/usr/lib/node_modules/alacritty-themes/themes/Atelierlakeside.dark.toml"
]
live_config_reload = true
ipc_socket = true

[env]
TERM = "alacritty"
WINIT_X11_SCALE_FACTOR = "1.0"

[window]
position = "None"
dynamic_padding = true
decorations = "full"
opacity = 1
blur = false
startup_mode = "Windowed"
dynamic_title = true
decorations_theme_variant = "None"

  [window.class]
  instance = "Alacritty"
  general = "Alacritty"

  [window.dimensions]
  columns = 82
  lines = 24

  [window.padding]
  x = 12
  y = 12

[scrolling]
history = 10_000
multiplier = 3

[bell]
animation = "Linear"
duration = 20

[selection]
save_to_clipboard = true

[cursor]
vi_mode_style = "None"
blink_interval = 750
blink_timeout = 5
unfocused_hollow = false
thickness = 0.15

  [cursor.style]
  shape = "Block"
  blinking = "On"

[mouse]
hide_when_typing = false

[[hints.enabled]]
command = "xdg-open"
hyperlinks = true
post_processing = true
persist = false

  [hints.enabled.mouse]
  enabled = true

  [hints.enabled.binding]
  key = "U"
  mods = "Control|Shift"

[debug]
render_timer = false
persistent_logging = false
log_level = "Warn"
renderer = "None"
print_events = false
highlight_damage = false
prefer_egl = false
